<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_nav_settings_to_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <ImageButton
        android:id="@+id/nav_settings_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:tint="@color/my_main_color"
        android:src="@drawable/ic_location_end_24dp" />

    <TextView
        android:id="@+id/settings_to_local_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/textline"
        android:singleLine="true"
        android:textColorHint="@color/my_secondary_text"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/settings_to_sel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/ic_filter_center_focus_white_24dp"
        android:tint="@color/my_main_color" />

    <ImageButton
        android:id="@+id/settings_to_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/ic_search_white_24dp"
        android:tint="@color/my_main_color" />

    <ImageButton
        android:id="@+id/settings_to_del_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/ic_clear_white_24dp"
        android:tint="@color/my_main_color"
        android:visibility="gone" />

</LinearLayout>